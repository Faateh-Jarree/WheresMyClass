<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/black_back"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_view">


    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="140dp"
        android:layout_height="170dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_below="@+id/logo_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lin_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/select_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:textColor="#5AC8FA"
            android:textSize="20dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="26dp"/>

        <NumberPicker
            android:id="@+id/number_picker_wgt"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/select_time_tv"
            android:layout_marginStart="80dp"/>
    </LinearLayout>


    <Button
        android:id="@+id/add_time_table_btn"
        android:layout_below="@+id/lin_view"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/circular_button"
        android:text="Add Time Table"
        android:textColor="#00aeff"
        android:textSize="25dp"
        android:onClick="onClickAddTable"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/select_courses_btn"
        android:layout_below="@id/add_time_table_btn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/circular_button"
        android:text="Select Courses"
        android:textColor="#00aeff"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/view_schedule_btn"
        android:layout_below="@+id/select_courses_btn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/circular_button"
        android:text="View Schedule"
        android:textColor="#00aeff"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
