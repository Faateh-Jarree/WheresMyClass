<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name= "windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Splash Screen theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_gif</item>
    </style>

    <!-- Select Course theme -->
    <style name="AppTheme.AppBarOverlay" parent = "Theme.AppCompat.Light"></style>
    <style name="AppTheme.PopupOverlay" parent = "Theme.AppCompat.Light"></style>


    <!-- TabLayout theme in View Schedule -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name ="android:textSize">9dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Toolbar theme in View Schedule -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
</resources>
